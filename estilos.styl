@import "normalize.styl"

body
	position relative
input[type=checkbox]
	transform scale(1.7)

#header 
	background #ccc
	height 160px
	width 400px
	#logo, #user-profile
		display inline-block
	#logo img
		width 100px
		height 80px
		background white
		margin 10px
	#user-profile 
		float right
		img
			margin 15px 30px
			width 70px
			height 70px
			border-radius 50%
	#search-box
		margin 10px 25px
		text-align center
		width 350px
#sidebar
	width 400px
	font-size 18px
	ul
		margin 20px 0
		padding 20px 0
		border-radius 20px
		background #eee
		li
			text-align center
			width 100%
			height 32px
			line-height 32px
			list-style none
			border 1px solid #ccc
			border-left 0px
			border-right 0px
			border-bottom 0px
			&:last-child
				border-bottom 1px solid #ccc
			&:hover
				box-shadow inset 3px 3px 35px rgba(0,0,0,.5)
				cursor pointer
				
#main 
	position absolute
	left 450px
	top 100px
	width 60%
	height 80%
	background #eee
	border-radius 20px
	border 1px solid #9297F0
	box-shadow 5px 5px 5px rgba(73, 150, 147, 0.3)
	#email-actions
		border-top-left-radius 20px
		border-top-right-radius 20px
		list-style none
		width 100%
		display block
		text-align right
		border-bottom 1px solid #9297F0
		background #D7EDFF
		margin-left 0
		margin-bottom 0
		padding 0 20px 0 0
		li 
			border 1px solid #9297F0
			color blue
			text-align center
			font-weight bold
			padding 5px 15px
			margin 10px
	#emails
		margin-left 0
		padding 10px 20px 10px 10px
		li
			position relative 
			width 100%
			height 80px
			border-radius 25px
			background #aaa
			list-style none
			text-indent 40px
			background #D7EDFF
			border 1px solid #9297F0
			box-shadow 3px 3px 5px rgba(0,0,0,.4)
			padding 10px
			margin 10px
			&:hover
				transform translate(2px,3px)
				box-shadow none
				cursor pointer
			.email-inputs
				position absolute
				top 25px
				right 30px
				input
					margin 0 10px
				.star-email
					display none
				.star-image
					width 30px
					height 30px
					vertical-align -8px
	#blank-email
		display none
		width 100%
		padding 20px
		.row
			margin 10px
			label
				line-height 30px
			input,textarea
				border-radius 15px
				border 0
				height 30px
				outline none
				border 1px solid #9297F0
				&:focus
					box-shadow inset 3px 3px 3px rgba(146, 151, 240, 0.5)
			textarea
				height 200px
				padding 15px
		#blank-bottom
			text-align center
	#expand-email
		display none
		padding 10px
		span
			padding 10px
			margin 10px 30px 5px
		.email-labels
			font-size 18px
			font-weight bold
		.email-data
			background white
			border-radius 10px
		
#footer
	position absolute
	bottom -20px
	left 0
	right 0
	height 90px
	background #eee
	
span.title
	font-size 22px
	color red
	display block 
	text-align center
	text-transform uppercase
	
#select-icon
	margin 0px 10px
	vertical-align -2px
		
#email-result
	position absolute
	top 500px
	left 480px	
.number
	background blue
	vertical-align text-bottom